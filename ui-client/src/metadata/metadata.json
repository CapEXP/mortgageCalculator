{
    "Personal Information": {
        "first_name": {
            "field_type": "TextField",
            "label": "First Name",
            "className": "form-field"
        },
        "last_name": {
            "field_type": "TextField",
            "label": "Last Name",
            "className": "form-field"
        },
        "national_id": {
            "field_type": "TextField",
            "label": "National ID / Iqama Number",
            "className": "form-field"
        },
        "email": {
            "field_type": "TextField",
            "label": "Email Address",
            "className": "form-field"
        },
        "phone_number": {
            "field_type": "TextField",
            "label": "Mobile Phone Number",
            "className": "form-field"
        },
        "contact_method": {
            "field_type": "Radio",
            "label": "Preferred Contact Method",
            "className": "form-field",
            "options": [
                {
                    "value": "email",
                    "label": "Email"
                },
                {
                    "value": "phone",
                    "label": "Phone"
                }
            ]
        }
    },
    "Salary Information": {
        "salary_amount": {
            "field_type": "TextField",
            "label": "Annual Salary Amount",
            "className": "form-field"
        },
        "salary_source": {
            "field_type": "TextField",
            "label": "Salary Source",
            "className": "form-field"
        },
        "employment_status": {
            "field_type": "Select",
            "label": "Employment Status",
            "className": "form-field",
            "options": [
                {
                    "value": "employed",
                    "label": "Employed"
                },
                {
                    "value": "self_employed",
                    "label": "Self-employed"
                },
                {
                    "value": "unemployed",
                    "label": "Unemployed"
                }
            ]
        }
    },
    "Property Information": {
        "property_value": {
            "field_type": "TextField",
            "label": "Property Value",
            "className": "form-field"
        },
        "property_type": {
            "field_type": "Select",
            "label": "Property Type",
            "className": "form-field",
            "options": [
                {
                    "value": "villa",
                    "label": "Villa"
                },
                {
                    "value": "duplex",
                    "label": "Duplex"
                },
                {
                    "value": "apartment",
                    "label": "Apartment"
                }
            ]
        }
    }
}